{
    "spec_dir": "build/tests",
  
    "spec_files": [
      "**/*[sS]pec.?(m)js",
      "!**/*nospec.js"
    ],
  
    "helpers": [
      "helpers/**/*.?(m)js"
    ],
    
    "reporters": [
      {
        "name": "jasmine-spec-reporter#SpecReporter",
        "options": {
          "displayStacktrace": "all"
        }
      }
    ],
    
    "env": {
      "failSpecWithNoExpectations": false,
      
      "stopSpecOnExpectationFailure": false,
  
      "stopOnSpecFailure": false,

      "random": false
    }
  }